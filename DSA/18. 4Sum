from typing import List

class Solution:
    def fourSum(self, nums: List[int], target: int) -> List[List[int]]:
        nums.sort()  # Important for avoiding duplicates
        res = []
        
        def kSum(k, start, target, path):
            if k == 2:
                # Two pointers for 2Sum
                left, right = start, len(nums) - 1
                while left < right:
                    total = nums[left] + nums[right]
                    if total == target:
                        res.append(path + [nums[left], nums[right]])
                        left += 1
                        right -= 1
                        # Skip duplicates
                        while left < right and nums[left] == nums[left - 1]:
                            left += 1
                        while left < right and nums[right] == nums[right + 1]:
                            right -= 1
                    elif total < target:
                        left += 1
                    else:
                        right -= 1
            else:
                # Reduce kSum to (k-1)Sum
                for i in range(start, len(nums) - k + 1):
                    if i > start and nums[i] == nums[i - 1]:
                        continue
                    kSum(k - 1, i + 1, target - nums[i], path + [nums[i]])
        
        kSum(4, 0, target, [])
        return res
